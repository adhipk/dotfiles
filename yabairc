#!/usr/bin/env sh

# load scripting addition
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# global settings
yabai -m config external_bar                 all:40:0
yabai -m config layout                       bsp
yabai -m config window_placement             second_child

# padding and gaps
yabai -m config top_padding                  0
yabai -m config bottom_padding               3
yabai -m config left_padding                 3
yabai -m config right_padding                3
yabai -m config window_gap                   0

# mouse
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# window appearance
yabai -m config window_shadow                off
yabai -m config window_opacity               off
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.95
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off

# float system preferences and other non-tileable apps
yabai -m rule --add app="^System Settings$"  manage=off
yabai -m rule --add app="^Calculator$"       manage=off
yabai -m rule --add app="^Karabiner"         manage=off
yabai -m rule --add app="^Archive Utility$"  manage=off
yabai -m rule --add app="^Finder$" title="^(Copy|Connect|Move|Info|Pref)" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^App Store$"        manage=off
yabai -m rule --add app="^System Information$" manage=off
yabai -m rule --add app="^Keychain Access$"  manage=off
yabai -m rule --add title="^skhd keys$"     manage=off

# ============================================================
# Fixed Space Order (1-4)
# 1: Ghostty, Browser
# 2: Editor
# 3: Slack, Teams, Outlook
# 4: Empty (no default apps)
# ============================================================

# Ensure at least 4 spaces exist on display 1
SPACE_COUNT=$(yabai -m query --spaces --display 1 | jq 'length')
if [ "$SPACE_COUNT" -lt 4 ]; then
  i=$SPACE_COUNT
  while [ "$i" -lt 4 ]; do
    yabai -m space --create
    i=$((i + 1))
  done
fi

# Label spaces consistently
yabai -m space 1 --label "browser"
yabai -m space 2 --label "editor"
yabai -m space 3 --label "comms"
yabai -m space 4 --label "empty"

# App â†’ space assignments
yabai -m rule --add app="^Ghostty$" space=1

# Browsers (covers @browser)
yabai -m rule --add app="^Safari$" space=1
yabai -m rule --add app="^Google Chrome$" space=1
yabai -m rule --add app="^Arc$" space=1
yabai -m rule --add app="^Brave Browser$" space=1
yabai -m rule --add app="^Firefox$" space=1

# Editors (covers @editor)
yabai -m rule --add app="^Cursor$" space=2
yabai -m rule --add app="^Visual Studio Code$" space=2
yabai -m rule --add app="^Zed$" space=2
yabai -m rule --add app="^Sublime Text$" space=2
yabai -m rule --add app="^Xcode$" space=2

# Comms
yabai -m rule --add app="^Slack$" space=3
yabai -m rule --add app="^Microsoft Teams$" space=3
yabai -m rule --add app="^Microsoft Outlook$" space=3

# ============================================================
# Border color signals
# ============================================================
yabai -m signal --add event=window_focused action="$HOME/.config/borders/update_border.sh"
yabai -m signal --add event=window_created action="$HOME/.config/borders/auto_mark.sh && $HOME/.config/borders/update_border.sh"
yabai -m signal --add event=window_destroyed action="$HOME/.config/borders/cleanup_marks.sh && $HOME/.config/borders/update_border.sh"
yabai -m signal --add event=application_hidden action="$HOME/.config/borders/update_border.sh"

echo "yabai configuration loaded..."
